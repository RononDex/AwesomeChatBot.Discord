<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyVersion>1.2.1.0</AssemblyVersion>
    <FileVersion>1.2.1</FileVersion>
    <Version>1.2.1</Version>
    <!-- The identifier that must be unique within the hosting gallery -->

    <PackageId>AwesomeChatBot.DiscordWrapper</PackageId>
    <NuspecFile>.nuspec</NuspecFile>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
  </PropertyGroup>

   <PropertyGroup>
    <NoWarn>CSE0003;CC0038;IDE0008;CC0035;CC0045</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Discord.Net" Version="2.0.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Release'">
    <PackageReference Include="AwesomeChatBot" Version="1.2.1" />
  </ItemGroup>


  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <ProjectReference Include="..\AwesomeChatBot\AwesomeChatBot\AwesomeChatBot.csproj" />
  </ItemGroup>
</Project>
